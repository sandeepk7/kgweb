<UserControl x:Class="KGWin.WPF.Views.MapLayerManager"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:KGWin.WPF.Views"
             xmlns:component="clr-namespace:KGWin.WPF.Views.Components"
             xmlns:constant="clr-namespace:KGWin.WPF.Constants"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="300" />
        </Grid.ColumnDefinitions>
        <Border Grid.Row="0" Margin="0 0 8 0">
            <component:KGHeading DataContext="Utility Layers" />
        </Border>
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" Padding="16">
            <StackPanel>
                <ItemsControl ItemsSource="{Binding Layers}">
                    <ItemsControl.Items />
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Border Background="#e5e7e1" Margin="0 0 0 12" Padding="16 12" CornerRadius="6">
                                <CheckBox IsChecked="{Binding IsVisible}" Content="{Binding Name}" FontWeight="Medium" />
                            </Border>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</UserControl>
