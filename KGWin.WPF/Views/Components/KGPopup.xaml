<UserControl x:Class="KGWin.WPF.Views.Components.KGPopup"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:converters="clr-namespace:KGWin.WPF.Converters"
             xmlns:components="clr-namespace:KGWin.WPF.Views.Components"
             xmlns:local="clr-namespace:KGWin.WPF.Views.Components"
             mc:Ignorable="d" 
             HorizontalAlignment="Left"
             VerticalAlignment="Top"
             x:Name="KGPopupRoot"
             d:DesignHeight="450" 
             d:DesignWidth="800"
             Width="{Binding Width}"
             Height="{Binding Height}">
    <UserControl.Resources>
        <converters:BoolToVisibilityConverter x:Key="BoolToVisibilityConverter"/>
        <DropShadowEffect x:Key="DropShadowEffect" 
                   Color="Black" 
                   BlurRadius="10" 
                   ShadowDepth="2" 
                   Opacity="0.3"/>
    </UserControl.Resources>
    <UserControl.RenderTransform>
        <TranslateTransform X="{Binding X}" Y="{Binding Y}"/>
    </UserControl.RenderTransform>
    <Grid>
        <Border 
            Visibility="{Binding IsVisible, Converter={StaticResource BoolToVisibilityConverter}}"              
            Effect="{StaticResource DropShadowEffect}"
            Background="#ffffff">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="*" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>
                <components:KGHeading Grid.Row="0" DataContext="{Binding Title}" />
                <Button Grid.Row="0" Content="✕" 
    HorizontalAlignment="Right" 
    VerticalAlignment="Top"
    Background="Transparent"
    BorderThickness="0"
    FontSize="16"
    FontWeight="Bold"
    Foreground="#7B8290"
    Command="{Binding ClosePopupCommand}"
      Width="28" Height="28"
    Margin="0,1,1,0"/>

                <Border Grid.Row="1">
                    <ContentPresenter Content="{Binding Body, ElementName=KGPopupRoot}"/>
                </Border>

                <Border Grid.Row="2" Background="#E5E7EB" Height="1" />

                <Border Grid.Row="3" Padding="8">
                    <ItemsControl ItemsSource="{Binding Buttons}">
                        <ItemsControl.ItemsPanel>
                            <ItemsPanelTemplate>
                                <WrapPanel HorizontalAlignment="Stretch" Width="{Binding ActualWidth, RelativeSource={RelativeSource AncestorType=ItemsControl}}" />
                            </ItemsPanelTemplate>
                        </ItemsControl.ItemsPanel>
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Border Padding="8 4">
                                    <components:KGButton />
                                </Border>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </Border>
            </Grid>
        </Border>
    </Grid>
</UserControl>
