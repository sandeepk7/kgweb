<Page x:Class="KGWin.MapPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:esri="http://schemas.esri.com/arcgis/runtime/2013"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="MapPage">

    <Page.Resources>
        <Style x:Key="MapControlStyle" TargetType="Border">
            <Setter Property="Background" Value="#F8F9FA"/>
            <Setter Property="BorderBrush" Value="#DEE2E6"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="CornerRadius" Value="8"/>
        </Style>
        
        <Style x:Key="ToolButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderBrush" Value="#DEE2E6"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="12,8"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="4">
                            <ContentPresenter HorizontalAlignment="Center" 
                                            VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#E9ECEF"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#DEE2E6"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="TabButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="#666666"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="20,15"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="FontWeight" Value="Medium"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}">
                            <ContentPresenter HorizontalAlignment="Center" 
                                            VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#F0F0F0"/>
                                <Setter Property="Foreground" Value="#007ACC"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="ActiveTabButtonStyle" TargetType="Button" BasedOn="{StaticResource TabButtonStyle}">
            <Setter Property="Background" Value="White"/>
            <Setter Property="Foreground" Value="#007ACC"/>
            <Setter Property="BorderThickness" Value="0,0,0,3"/>
            <Setter Property="BorderBrush" Value="#007ACC"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="White"/>
                    <Setter Property="Foreground" Value="#007ACC"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Page.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Tab Navigation -->
        <Border Grid.Row="1" 
                Background="White" 
                BorderBrush="#E0E0E0" 
                BorderThickness="0,0,0,1">
            <StackPanel Orientation="Horizontal">
                <Button x:Name="LiveMapTab" 
                        Content="LIVE MAP" 
                        Style="{StaticResource ActiveTabButtonStyle}"
                        Click="LiveMapTab_Click"
                        Margin="20"/>
                <Button x:Name="OfflineMapTab" 
                        Content="OFFLINE MAP" 
                        Style="{StaticResource TabButtonStyle}"
                        Click="OfflineMapTab_Click"/>
            </StackPanel>
        </Border>

        <!-- Tab Content -->
        <Grid Grid.Row="2">
            <!-- Live Map Tab Content -->
            <Grid x:Name="LiveMapContent" Visibility="Visible">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- Live Map Controls -->
                <Border Grid.Row="0" 
                        Background="#F8F9FA" 
                        BorderBrush="#E0E0E0" 
                        BorderThickness="0,0,0,1"
                        Padding="20,15">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        
                        <!-- Left side - Asset Layer Buttons -->
                        <StackPanel Grid.Column="0" 
                                    Orientation="Horizontal" 
                                    HorizontalAlignment="Left">
                            <Button Content="Show Asset Layer" 
                                    Background="#28A745" 
                                    Foreground="White"
                                    Padding="15,8"
                                    FontSize="14"
                                    Click="ShowAssetLayer_Click"
                                    Margin="0,0,10,0"/>
                            <Button Content="Show Asset Details" 
                                    Background="#17A2B8" 
                                    Foreground="White"
                                    Padding="15,8"
                                    FontSize="14"
                                    Click="ShowAssetDetails_Click"/>
                        </StackPanel>
                        
                        <!-- Right side - Map Controls -->
                        <StackPanel Grid.Column="1" 
                                    Orientation="Horizontal" 
                                    HorizontalAlignment="Right">
                            <Button Content="Rotate Left" 
                                    Style="{StaticResource ToolButtonStyle}"
                                    Click="ZoomIn_Click"
                                    Margin="0,0,10,0"/>
                            <Button Content="Rotate Right" 
                                    Style="{StaticResource ToolButtonStyle}"
                                    Click="ZoomOut_Click"
                                    Margin="0,0,10,0"/>
                            <Button Content="Reset" 
                                    Style="{StaticResource ToolButtonStyle}"
                                    Click="ResetView_Click"/>
                        </StackPanel>
                    </Grid>
                </Border>

                <!-- Live Map Display -->
                <Grid Grid.Row="1" Margin="20">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="300"/>
                    </Grid.ColumnDefinitions>

                    <!-- Map Display Area -->
                    <Border Grid.Column="0" 
                            Style="{StaticResource MapControlStyle}"
                            Margin="0,0,10,0">
                        <Grid>
                            <!-- ESRI MapView -->
                            <esri:MapView x:Name="MyMapView" 
                                          Map="{Binding Map}"
                                          Background="#E8F4FD"/>
                            
                            <!-- Map overlay controls -->
                            <StackPanel VerticalAlignment="Top" 
                                        HorizontalAlignment="Left" 
                                        Margin="10">
                                <TextBlock x:Name="MapOverlayText"
                                           Text="ESRI Live Map View" 
                                           FontSize="16" 
                                           FontWeight="Bold" 
                                           Foreground="#007ACC" 
                                           Background="White" 
                                           Padding="8,4"/>
                            </StackPanel>
                        </Grid>
                    </Border>

                    <!-- Map Information Panel -->
                    <Border Grid.Column="1" 
                            Background="White" 
                            BorderBrush="#DEE2E6" 
                            BorderThickness="1" 
                            CornerRadius="8"
                            Padding="20">
                        <StackPanel>
                            <TextBlock Text="Live Map Information" 
                                       FontSize="20" 
                                       FontWeight="Bold" 
                                       Foreground="#007ACC"
                                       Margin="0,0,0,20"/>
                            
                            <TextBlock Text="Location Details" 
                                       FontSize="16" 
                                       FontWeight="SemiBold" 
                                       Margin="0,0,0,10"/>
                            <TextBlock x:Name="LatitudeText" 
                                       Text="Latitude: --" 
                                       FontSize="14" 
                                       Margin="0,5"/>
                            <TextBlock x:Name="LongitudeText" 
                                       Text="Longitude: --" 
                                       FontSize="14" 
                                       Margin="0,5"/>
                            <TextBlock x:Name="ZoomLevelText" 
                                       Text="Zoom Level: --" 
                                       FontSize="14" 
                                       Margin="0,5"/>
                            
                            <Separator Margin="0,20"/>
                            
                            <TextBlock Text="Live Map Features" 
                                       FontSize="16" 
                                       FontWeight="SemiBold" 
                                       Margin="0,0,0,10"/>
                            <TextBlock Text="• Real-time map data" 
                                       FontSize="14" 
                                       Margin="0,5"/>
                            <TextBlock Text="• Online ArcGIS services" 
                                       FontSize="14" 
                                       Margin="0,5"/>
                            <TextBlock Text="• Dynamic content updates" 
                                       FontSize="14" 
                                       Margin="0,5"/>
                            
                            <Separator Margin="0,20"/>
                            
                            <Button x:Name="HelpButton"
                                     Content="Get ESRI Credentials" 
                                     Background="#17A2B8" 
                                     Foreground="White"
                                     Padding="15,8"
                                     FontSize="14"
                                     Margin="0,5,0,0"
                                     Click="HelpButton_Click"
                                     Visibility="Collapsed"/>
                        </StackPanel>
                    </Border>
                </Grid>
            </Grid>

            <!-- Offline Map Tab Content -->
            <Grid x:Name="OfflineMapContent" Visibility="Collapsed">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- Offline Map Controls -->
                <Border Grid.Row="0" 
                        Background="#F8F9FA" 
                        BorderBrush="#E0E0E0" 
                        BorderThickness="0,0,0,1"
                        Padding="20,15">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        
                        <!-- Left side - Load Map Buttons -->
                        <StackPanel Grid.Column="0" 
                                    Orientation="Horizontal" 
                                    HorizontalAlignment="Left">
                            <Button Content="Load VTPK" 
                                    Background="#007ACC" 
                                    Foreground="White"
                                    Padding="15,8"
                                    FontSize="14"
                                    Click="LoadVTPK_Click"
                                    Margin="0,0,10,0"/>
                            <Button Content="Load VTPK with MMPK" 
                                    Background="#007ACC" 
                                    Foreground="White"
                                    Padding="15,8"
                                    FontSize="14"
                                    Click="LoadMMPK_Click"/>
                        </StackPanel>
                        
                        <!-- Right side - Map Controls -->
                        <StackPanel Grid.Column="1" 
                                    Orientation="Horizontal" 
                                    HorizontalAlignment="Right">
                            <Button Content="Rotate Left" 
                                    Style="{StaticResource ToolButtonStyle}"
                                    Click="ZoomIn_Click"
                                    Margin="0,0,10,0"/>
                            <Button Content="Rotate Right" 
                                    Style="{StaticResource ToolButtonStyle}"
                                    Click="ZoomOut_Click"
                                    Margin="0,0,10,0"/>
                            <Button Content="Reset" 
                                    Style="{StaticResource ToolButtonStyle}"
                                    Click="ResetView_Click"/>
                        </StackPanel>
                    </Grid>
                </Border>

                <!-- Offline Map Display -->
                <Grid Grid.Row="1" Margin="20">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="300"/>
                    </Grid.ColumnDefinitions>

                    <!-- Map Display Area -->
                    <Border Grid.Column="0" 
                            Style="{StaticResource MapControlStyle}"
                            Margin="0,0,10,0">
                        <Grid>
                            <!-- ESRI MapView for Offline -->
                            <esri:MapView x:Name="OfflineMapView" 
                                          Background="#E8F4FD"/>
                            
                            <!-- Map overlay controls -->
                            <StackPanel VerticalAlignment="Top" 
                                        HorizontalAlignment="Left" 
                                        Margin="10">
                                <TextBlock x:Name="OfflineMapOverlayText"
                                           Text="ESRI Offline Map View" 
                                           FontSize="16" 
                                           FontWeight="Bold" 
                                           Foreground="#007ACC" 
                                           Background="White" 
                                           Padding="8,4"/>
                            </StackPanel>
                        </Grid>
                    </Border>

                    <!-- Offline Map Information Panel -->
                    <Border Grid.Column="1" 
                            Background="White" 
                            BorderBrush="#DEE2E6" 
                            BorderThickness="1" 
                            CornerRadius="8"
                            Padding="20">
                        <StackPanel>
                            <TextBlock Text="Offline Map Information" 
                                       FontSize="20" 
                                       FontWeight="Bold" 
                                       Foreground="#007ACC"
                                       Margin="0,0,0,20"/>
                            
                            <TextBlock Text="Location Details" 
                                       FontSize="16" 
                                       FontWeight="SemiBold" 
                                       Margin="0,0,0,10"/>
                            <TextBlock x:Name="OfflineLatitudeText" 
                                       Text="Latitude: --" 
                                       FontSize="14" 
                                       Margin="0,5"/>
                            <TextBlock x:Name="OfflineLongitudeText" 
                                       Text="Longitude: --" 
                                       FontSize="14" 
                                       Margin="0,5"/>
                            <TextBlock x:Name="OfflineZoomLevelText" 
                                       Text="Zoom Level: --" 
                                       FontSize="14" 
                                       Margin="0,5"/>
                            
                            <Separator Margin="0,20"/>
                            
                            <TextBlock Text="Offline Map Features" 
                                       FontSize="16" 
                                       FontWeight="SemiBold" 
                                       Margin="0,0,0,10"/>
                            <TextBlock Text="• Local VTPK files" 
                                       FontSize="14" 
                                       Margin="0,5"/>
                            <TextBlock Text="• MMPK mobile packages" 
                                       FontSize="14" 
                                       Margin="0,5"/>
                            <TextBlock Text="• No internet required" 
                                       FontSize="14" 
                                       Margin="0,5"/>
                            
                                                     </StackPanel>
                    </Border>
                </Grid>
            </Grid>
        </Grid>
    </Grid>
</Page>
