<Window x:Class="KGWin.AssetPopup"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Asset Information" 
        Height="220" 
        Width="380"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        ResizeMode="NoResize"
        WindowStartupLocation="Manual"
        ShowInTaskbar="False"
        Topmost="True">
    
         <Window.Resources>
         <Style x:Key="CloseButtonStyle" TargetType="Button">
             <Setter Property="Background" Value="Transparent"/>
             <Setter Property="BorderThickness" Value="1"/>
             <Setter Property="BorderBrush" Value="#CCCCCC"/>
             <Setter Property="Foreground" Value="#666666"/>
             <Setter Property="FontSize" Value="18"/>
             <Setter Property="FontWeight" Value="Bold"/>
             <Setter Property="Cursor" Value="Hand"/>
             <Setter Property="Template">
                 <Setter.Value>
                     <ControlTemplate TargetType="Button">
                         <Border Background="{TemplateBinding Background}"
                                 BorderBrush="{TemplateBinding BorderBrush}"
                                 BorderThickness="{TemplateBinding BorderThickness}"
                                 CornerRadius="2">
                             <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                         </Border>
                         <ControlTemplate.Triggers>
                             <Trigger Property="IsMouseOver" Value="True">
                                 <Setter Property="Background" Value="#FFE6E6"/>
                                 <Setter Property="BorderBrush" Value="#FF6666"/>
                                 <Setter Property="Foreground" Value="#FF0000"/>
                             </Trigger>
                         </ControlTemplate.Triggers>
                     </ControlTemplate>
                 </Setter.Value>
             </Setter>
         </Style>
     </Window.Resources>
    
    <Border Background="White" 
            BorderBrush="#E0E0E0" 
            BorderThickness="1" 
            CornerRadius="8"
            Effect="{DynamicResource MaterialDesignElevationShadow2}">
        
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            
            <!-- Header -->
            <Border Grid.Row="0" 
                    Background="#007ACC" 
                    CornerRadius="8,8,0,0"
                    Padding="5,5">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    
                    <TextBlock Grid.Column="0" 
                               Text="Asset Information" 
                               FontSize="18" 
                               FontWeight="Bold" 
                               Foreground="White"
                               VerticalAlignment="Center"/>
                    
                                         <Button Grid.Column="1" 
                             Content="X" 
                             Style="{StaticResource CloseButtonStyle}"
                             Click="CloseButton_Click"
                             Width="28" 
                             Height="28"/>
                </Grid>
            </Border>
            
            <!-- Content -->
            <Grid Grid.Row="1">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                
                <!-- Asset ID -->
                <Border Grid.Row="0"
                        Background="#F8F9FA" 
                        BorderBrush="#E9ECEF" 
                        BorderThickness="1" 
                        CornerRadius="4"
                        Padding="8,6"
                        Margin="0,0,0,8">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            
                            <TextBlock Grid.Column="0" 
                                       Text="Asset ID:" 
                                       FontWeight="SemiBold" 
                                       Foreground="#495057"
                                       Margin="0,0,10,0"/>
                            <TextBlock Grid.Column="1" 
                                       x:Name="AssetIdText"
                                       Text="--" 
                                       Foreground="#212529"/>
                        </Grid>
                    </Border>
                    
                <!-- Asset Name -->
                <Border Grid.Row="1"
                        Background="#F8F9FA" 
                        BorderBrush="#E9ECEF" 
                        BorderThickness="1" 
                        CornerRadius="4"
                        Padding="8,6"
                        Margin="0,0,0,8">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            
                            <TextBlock Grid.Column="0" 
                                       Text="Name:" 
                                       FontWeight="SemiBold" 
                                       Foreground="#495057"
                                       Margin="0,0,10,0"/>
                            <TextBlock Grid.Column="1" 
                                       x:Name="AssetNameText"
                                       Text="--" 
                                       Foreground="#212529"/>
                        </Grid>
                    </Border>
                    
                <!-- Asset Type -->
                <Border Grid.Row="2"
                        Background="#F8F9FA" 
                        BorderBrush="#E9ECEF" 
                        BorderThickness="1" 
                        CornerRadius="4"
                        Padding="8,6"
                        Margin="0,0,0,8">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            
                            <TextBlock Grid.Column="0" 
                                       Text="Type:" 
                                       FontWeight="SemiBold" 
                                       Foreground="#495057"
                                       Margin="0,0,10,0"/>
                            <TextBlock Grid.Column="1" 
                                       x:Name="AssetTypeText"
                                       Text="--" 
                                       Foreground="#212529"/>
                        </Grid>
                    </Border>
                    
                <!-- Description -->
                <Border Grid.Row="3"
                        Background="#F8F9FA" 
                        BorderBrush="#E9ECEF" 
                        BorderThickness="1" 
                        CornerRadius="4"
                        Padding="8,6"
                        Margin="0,0,0,8">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>
                            
                            <TextBlock Grid.Row="0" 
                                       Text="Description:" 
                                       FontWeight="SemiBold" 
                                       Foreground="#495057"
                                       Margin="0,0,0,8"/>
                            <TextBlock Grid.Row="1" 
                                       x:Name="DescriptionText"
                                       Text="--" 
                                       Foreground="#212529"
                                       TextWrapping="Wrap"/>
                        </Grid>
                    </Border>
                    
                <!-- Close Button -->
                <Button Grid.Row="4"
                        Content="Close" 
                        Background="#007ACC" 
                        Foreground="White"
                        BorderThickness="0"
                        Padding="15,8"
                        FontSize="13"
                        FontWeight="SemiBold"
                        Margin="0,8,0,0"
                        Click="CloseButton_Click"
                        Cursor="Hand">
                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Border Background="{TemplateBinding Background}"
                                        CornerRadius="4">
                                    <ContentPresenter HorizontalAlignment="Center" 
                                                    VerticalAlignment="Center"/>
                                </Border>
                                <ControlTemplate.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="#0056B3"/>
                                    </Trigger>
                                </ControlTemplate.Triggers>
                            </ControlTemplate>
                        </Button.Template>
                    </Button>
            </Grid>
        </Grid>
    </Border>
</Window>
