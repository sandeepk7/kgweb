<Window x:Class="KGWin.UserChatWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Chat with User" Height="600" Width="800"
        WindowStartupLocation="CenterScreen"
        Background="#F8F9FA">

    <Window.Resources>
        <Style x:Key="ChatButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#007ACC"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Padding" Value="12,6"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#005A9E"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="MessageStyle" TargetType="Border">
            <Setter Property="Margin" Value="10,5"/>
            <Setter Property="Padding" Value="12,8"/>
            <Setter Property="CornerRadius" Value="8"/>
            <Setter Property="MaxWidth" Value="400"/>
        </Style>

        <Style x:Key="SentMessageStyle" TargetType="Border" BasedOn="{StaticResource MessageStyle}">
            <Setter Property="Background" Value="#007ACC"/>
            <Setter Property="HorizontalAlignment" Value="Right"/>
        </Style>

        <Style x:Key="ReceivedMessageStyle" TargetType="Border" BasedOn="{StaticResource MessageStyle}">
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderBrush" Value="#E0E0E0"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="HorizontalAlignment" Value="Left"/>
        </Style>

        <Style x:Key="SystemMessageStyle" TargetType="Border" BasedOn="{StaticResource MessageStyle}">
            <Setter Property="Background" Value="#FFF3CD"/>
            <Setter Property="BorderBrush" Value="#FFEAA7"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="HorizontalAlignment" Value="Center"/>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" Background="White" BorderBrush="#E0E0E0" BorderThickness="0,0,0,1" Padding="15">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0">
                    <TextBlock x:Name="ChatTitleText" Text="Chat with User" 
                               FontSize="20" FontWeight="Bold" 
                               Foreground="#333333"/>
                    <TextBlock x:Name="ConnectionStatusText" Text="Connected" 
                               FontSize="14" Foreground="#28A745" Margin="0,5,0,0"/>
                </StackPanel>

                <StackPanel Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Center">
                    <Ellipse x:Name="ConnectionIndicator" Width="12" Height="12" 
                             Fill="Green" Margin="0,0,8,0"/>
                    <Button Content="Refresh" Style="{StaticResource ChatButtonStyle}" 
                            Click="RefreshChat_Click"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Chat Messages Area -->
        <Border Grid.Row="1" Background="White" Margin="10">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Messages -->
                <ScrollViewer Grid.Row="0" x:Name="MessagesScrollViewer" 
                              VerticalScrollBarVisibility="Auto">
                    <StackPanel x:Name="MessagesContainer" Margin="10"/>
                </ScrollViewer>

                <!-- Message Input Area -->
                <Border Grid.Row="1" Background="#F8F9FA" BorderBrush="#E0E0E0" 
                        BorderThickness="0,1,0,0" Padding="15">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <!-- Message Type Selector -->
                        <Grid Grid.Row="0" Margin="0,0,0,10">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Grid.Column="0" Text="Message Type:" 
                                       FontWeight="SemiBold" FontSize="13" 
                                       VerticalAlignment="Center" Margin="0,0,10,0"/>
                            <ComboBox Grid.Column="1" x:Name="MessageTypeComboBox" 
                                      FontSize="13" SelectionChanged="MessageTypeComboBox_SelectionChanged">
                                <ComboBoxItem Content="Text Message" IsSelected="True"/>
                                <ComboBoxItem Content="JSON Data"/>
                                <ComboBoxItem Content="Asset Location"/>
                                <ComboBoxItem Content="Map Marker"/>
                            </ComboBox>
                        </Grid>

                        <!-- Message Input -->
                        <Grid Grid.Row="1" Margin="0,0,0,10">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <TextBox Grid.Column="0" x:Name="MessageInput" 
                                     Height="60" FontSize="13" 
                                     TextWrapping="Wrap" AcceptsReturn="True"
                                     VerticalScrollBarVisibility="Auto"
                                     Text="Hello! How can I help you today?"
                                     VerticalContentAlignment="Top"/>
                            <Button Grid.Column="1" Content="Send" 
                                    Style="{StaticResource ChatButtonStyle}" 
                                    Click="SendMessage_Click" Margin="10,0,0,0"/>
                        </Grid>

                        <!-- Quick Actions -->
                        <StackPanel Grid.Row="2" Orientation="Horizontal">
                            <Button Content="Send Test Asset" Style="{StaticResource ChatButtonStyle}" 
                                    Click="SendTestAsset_Click"/>
                            <Button Content="Send Test Marker" Style="{StaticResource ChatButtonStyle}" 
                                    Click="SendTestMarker_Click"/>
                            <Button Content="Clear Chat" Style="{StaticResource ChatButtonStyle}" 
                                    Click="ClearChat_Click"/>
                        </StackPanel>
                    </Grid>
                </Border>
            </Grid>
        </Border>
    </Grid>
</Window>
