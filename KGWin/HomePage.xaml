<Page x:Class="KGWin.HomePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="HomePage">

    <Page.Resources>
        <LinearGradientBrush x:Key="WelcomeGradient" StartPoint="0,0" EndPoint="1,1">
            <GradientStop Color="#007ACC" Offset="0"/>
            <GradientStop Color="#005A9E" Offset="1"/>
        </LinearGradientBrush>
        
        <Style x:Key="CardStyle" TargetType="Border">
            <Setter Property="Background" Value="White"/>
            <Setter Property="CornerRadius" Value="10"/>
            <Setter Property="Padding" Value="20"/>
            <Setter Property="Margin" Value="10"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect Color="Black" Direction="270" ShadowDepth="3" Opacity="0.1" BlurRadius="10"/>
                </Setter.Value>
            </Setter>
        </Style>
    </Page.Resources>

    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Welcome Section -->
            <Border Grid.Row="0" 
                    Background="{StaticResource WelcomeGradient}" 
                    Padding="40,30">
                <StackPanel>
                    <TextBlock Text="Welcome to KGWin POC App" 
                               FontSize="36" 
                               FontWeight="Bold" 
                               Foreground="White" 
                               HorizontalAlignment="Center"
                               Margin="0,0,0,10"/>
                    <TextBlock Text="Interactive map interface with live and offline capabilities" 
                               FontSize="18" 
                               Foreground="#E0E0E0" 
                               HorizontalAlignment="Center"
                               TextWrapping="Wrap"/>
                </StackPanel>
            </Border>

            <!-- Content Section -->
            <Grid Grid.Row="1" Margin="20">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- Features Card -->
                <Border Grid.Column="0" Style="{StaticResource CardStyle}">
                    <StackPanel>
                        <TextBlock Text="Features" 
                                   FontSize="24" 
                                   FontWeight="Bold" 
                                   Foreground="#007ACC"
                                   Margin="0,0,0,15"/>
                        <TextBlock Text="• Modern Navigation System" 
                                   FontSize="16" 
                                   Margin="0,5"/>
                        <TextBlock Text="• Responsive Design" 
                                   FontSize="16" 
                                   Margin="0,5"/>
                        <TextBlock Text="• Clean UI/UX" 
                                   FontSize="16" 
                                   Margin="0,5"/>
                        <TextBlock Text="• Easy to Extend" 
                                   FontSize="16" 
                                   Margin="0,5"/>
                    </StackPanel>
                </Border>

                <!-- Quick Actions Card -->
                <Border Grid.Column="1" Style="{StaticResource CardStyle}">
                    <StackPanel>
                        <TextBlock Text="Quick Actions" 
                                   FontSize="24" 
                                   FontWeight="Bold" 
                                   Foreground="#007ACC"
                                   Margin="0,0,0,15"/>
                        <Button Content="Go to Map" 
                                Background="#007ACC" 
                                Foreground="White"
                                Padding="20,10"
                                FontSize="16"
                                Margin="0,10"
                                Click="GoToMap_Click"/>
                        <Button Content="About" 
                                Background="Transparent" 
                                Foreground="#007ACC"
                                BorderBrush="#007ACC"
                                BorderThickness="2"
                                Padding="20,10"
                                FontSize="16"
                                Margin="0,10"
                                Click="About_Click"/>
                        <Button Content="Open KGWeb App" 
                                Background="#28A745" 
                                Foreground="White"
                                Padding="20,10"
                                FontSize="16"
                                Margin="0,10"
                                Click="OpenKGWeb_Click"/>
                    </StackPanel>
                </Border>
            </Grid>
        </Grid>
    </ScrollViewer>
</Page>
