<Page x:Class="KGWin.SignalRCommunicationPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="SignalR Communication">

    <Page.Resources>
        <Style x:Key="MonitorButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#007ACC"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Padding" Value="15,8"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#005A9E"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="StatusIndicatorStyle" TargetType="Ellipse">
            <Setter Property="Width" Value="12"/>
            <Setter Property="Height" Value="12"/>
            <Setter Property="Margin" Value="5,0"/>
        </Style>

        <Style x:Key="LogItemStyle" TargetType="TextBlock">
            <Setter Property="FontFamily" Value="Consolas"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="Margin" Value="5,3"/>
            <Setter Property="TextWrapping" Value="Wrap"/>
        </Style>

        <Style x:Key="UserItemStyle" TargetType="Border">
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderBrush" Value="#E0E0E0"/>
            <Setter Property="BorderThickness" Value="0,0,0,1"/>
            <Setter Property="Padding" Value="10"/>
            <Setter Property="Margin" Value="0,1"/>
        </Style>
    </Page.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" Background="#F8F9FA" BorderBrush="#E0E0E0" BorderThickness="0,0,0,1" Padding="20">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0">
                    <TextBlock Text="SignalR Communication" 
                               FontSize="28" FontWeight="Bold" 
                               Foreground="#333333"/>
                    <TextBlock Text="Real-time SignalR communication with connected users" 
                               FontSize="16" Foreground="#666666" Margin="0,5,0,0"/>
                </StackPanel>

                <StackPanel Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Center">
                    <TextBlock Text="Server Status:" VerticalAlignment="Center" FontWeight="SemiBold" FontSize="14"/>
                    <Ellipse x:Name="ServerStatusIndicator" Style="{StaticResource StatusIndicatorStyle}" 
                             Fill="Green"/>
                    <TextBlock x:Name="ServerStatusText" Text="Running" VerticalAlignment="Center" 
                               Foreground="Green" FontWeight="SemiBold" FontSize="14"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Main Chat Layout -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="250"/> <!-- Users List -->
                <ColumnDefinition Width="*"/>   <!-- Chat -->
            </Grid.ColumnDefinitions>

            <!-- Users List Panel -->
            <Border Grid.Column="0" Background="White" BorderBrush="#E0E0E0" BorderThickness="0,0,1,0">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <!-- Users Header -->
                    <Border Grid.Row="0" Background="#F8F9FA" BorderBrush="#E0E0E0" 
                            BorderThickness="0,0,0,1" Padding="15">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Grid.Column="0" Text="Connected Users" 
                                       FontSize="18" FontWeight="SemiBold"/>
                            <Button Grid.Column="1" Content="Refresh" 
                                    Style="{StaticResource MonitorButtonStyle}" 
                                    Click="RefreshUsers_Click" Margin="5,0,0,0"/>
                        </Grid>
                    </Border>

                    <!-- Users List -->
                    <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                        <StackPanel x:Name="ConnectedUsersContainer" Margin="0"/>
                    </ScrollViewer>
                </Grid>
            </Border>

            <!-- Chat Panel -->
            <Border Grid.Column="1" Background="White">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- Chat Header -->
                    <Border Grid.Row="0" Background="#F8F9FA" BorderBrush="#E0E0E0" 
                            BorderThickness="0,0,0,1" Padding="15">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Grid.Column="0" x:Name="ChatTitleText" Text="Chat Messages" 
                                       FontSize="18" FontWeight="SemiBold"/>
                            <Button Grid.Column="1" Content="Clear" 
                                    Style="{StaticResource MonitorButtonStyle}" 
                                    Click="ClearChat_Click"/>
                        </Grid>
                    </Border>

                    <!-- Chat Messages Area -->
                    <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" 
                                  HorizontalScrollBarVisibility="Auto">
                        <StackPanel x:Name="ChatMessagesContainer" Margin="15"/>
                    </ScrollViewer>

                    <!-- Chat Message Input with Quick Actions -->
                    <Border Grid.Row="2" Background="#F8F9FA" BorderBrush="#E0E0E0" 
                            BorderThickness="0,1,0,0" Padding="15">
                        <StackPanel>
                            <TextBlock Text="Message:" FontWeight="SemiBold" 
                                       FontSize="14" Margin="0,0,0,5"/>

                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <TextBox Grid.Column="0" x:Name="ChatMessageInput" 
                                         Height="90" FontSize="13" 
                                         Text="Hello!"
                                         AcceptsReturn="True"
                                         VerticalScrollBarVisibility="Auto"
                                         TextWrapping="Wrap"
                                         VerticalContentAlignment="Top"/>
                                <Button Grid.Column="1" Content="Send" 
                                        Style="{StaticResource MonitorButtonStyle}" 
                                        Click="SendChatMessage_Click" Margin="5,0,0,0"/>
                            </Grid>

                            <!-- Quick actions under the input -->
                            <StackPanel Orientation="Horizontal" Margin="0,10,0,0">
                                <Button Content="Insert Test Asset JSON" 
                                        Style="{StaticResource MonitorButtonStyle}" 
                                        Click="SendTestAssetToUser_Click"/>
                                <Button Content="Insert Test Marker JSON" 
                                        Style="{StaticResource MonitorButtonStyle}" 
                                        Click="SendTestMarkerToUser_Click"/>
                            </StackPanel>
                        </StackPanel>
                    </Border>
                </Grid>
            </Border>

            <!-- Removed right control panel -->
        </Grid>
    </Grid>
</Page>
